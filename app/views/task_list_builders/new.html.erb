<h1>New Task List</h1>

<%= simple_form_for @task_list_builder do |f| %>
  <%= f.input :name %>

  <div id="tasks">
    <%= f.simple_fields_for :tasks do |task| %>
      <%= render 'tasks/task_fields', f: task %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add Task', f, :tasks, { partial: 'tasks/task_fields' } %>
    </div>
  </div>

  <%= f.button :submit %>
<% end %>
